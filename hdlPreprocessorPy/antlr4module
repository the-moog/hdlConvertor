#%Module1.0

conflict antlr4
set installdir [pwd]

module-info shelltype bash

prepend-path CLASSPATH $installdir/antlr.jar

set-alias antrl4     "java org.antlr.v4.Tool"
set-alias grun       "java org.antlr.v4.runtime.misc.TestRig"

set-alias antlr4py3  "antrl4 -Dlanguage=Python3"
set-alias antlr4py2  "antrl4 -Dlanguage=Python2"
set-alias antlr4vpy3 "antrl4 -Dlanguage=Python3 -no-listener -visitor"
set-alias antlr4vpy2 "antrl4 -Dlanguage=Python2 -no-listener -visitor"

set-alias pygrun     "python3 $installdir/bin/pygrun"

